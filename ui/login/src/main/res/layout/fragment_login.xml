<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/scrollView"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:isScrollContainer="true"
    android:background="@android:color/white"
    android:fillViewport="true">
    
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="@string/login_label_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <View
                android:layout_marginTop="8dp"
                android:background="@color/colorSecondary"
                android:layout_width="match_parent"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="2dp"
                android:layout_height="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="2dp"/>
        
        </androidx.appcompat.widget.LinearLayoutCompat>
    
    
        <Space
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <com.github.edwnmrtnz.awesomeforms.library.AwesomeFormNormalEditText
            android:id="@+id/etServer"
            app:fieldLabel="Server"
            android:inputType="textNoSuggestions"
            app:assistiveText=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    
        <com.github.edwnmrtnz.awesomeforms.library.AwesomeFormNormalEditText
            android:id="@+id/etAccountName"
            android:layout_marginTop="8dp"
            app:fieldLabel="Account Name"
            app:assistiveText=""
            android:inputType="textNoSuggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    
        <com.github.edwnmrtnz.awesomeforms.library.AwesomeFormNormalEditText
            android:id="@+id/etEmail"
            android:layout_marginTop="8dp"
            app:fieldLabel="Email Address"
            android:inputType="textEmailAddress"
            app:assistiveText=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    
        <com.github.edwnmrtnz.awesomeforms.library.AwesomeFormPasswordEditText
            android:id="@+id/etPassword"
            android:layout_marginTop="8dp"
            app:fieldLabel="Password"
            app:assistiveText=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
    
        <com.google.android.material.button.MaterialButton
            android:layout_marginBottom="30dp"
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/login_action_sign_in"
            android:textAllCaps="false" />
        
    
    </androidx.appcompat.widget.LinearLayoutCompat>

    
</ScrollView>